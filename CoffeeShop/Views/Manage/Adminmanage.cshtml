
@{
    string actionName = ViewContext.RouteData.GetRequiredString("action");
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Timeline Widget -->
<div class="widget">
    <div class="widget-extra themed-background-dark">
        <h3 class="widget-content-light">
            <strong>@ViewBag.Title</strong>
        </h3>
        <div class="widget-options" style="opacity: 1; padding-top: 3px;">
            <div class="text-left text-nowrap" style="display: inline-block;">
                <select class="form-control form-control-lg" size="1">
                    <option value="all">Tất cả trạng thái</option>
                    <option value="online">Online</option>
                    <option value="offline">Offline</option>
                </select>
            </div>     
            <div class="text-left text-nowrap" style="display: inline-block;">
                <select class="form-control form-control-lg" size="1">
                    <option value="all">Cho phép & bị chặn</option>
                    <option value="online">Cho phép</option>
                    <option value="offline">Chặn</option>
                </select>
            </div> 
        </div>
    </div>
    <div class="widget-extra" style="height: auto !important;">
        <div>
            <ul class="breadcrumb">
                <li>Reishi Coffee & Milk tea</li>
                <li><a href="/manage/@actionName">@ViewBag.Title</a></li>
            </ul>
        </div>
        <div style="padding: 0 0;">
            <table class="table table-borderless middle-verticle" style="margin-bottom: 0; margin-top: 0;">
                <tr>
                    <th class="text-left text-nowrap" style="padding-left: 0;">
                        <label>Tìm kiếm</label>
                        <input type="text" class="form-control form-control-lg" placeholder="Nhập từ khoá tìm kiếm.."/>
                        <span class="help-block hidden-xs hidden-sm">Nhập thông tin tìm kiếm để tìm nhanh người dùng</span>
                    </th>     
                        
                    <th class="text-nowrap" style="width: 1%; padding-right: 0;">
                        <div><label>&nbsp;</label></div>
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#modal_add_user" data-backdrop="static" data-keyboard="false" class="btn btn-warning btn-lg">
                            <i class="fa fa-search"></i> <span class="hidden-xs hidden-sm">Tìm kiếm</span>
                        </a>     
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#modal_add_user" data-backdrop="static" data-keyboard="false" class="btn btn-success btn-lg">
                            <i class="fa fa-plus"></i> <span class="hidden-xs hidden-sm">Thêm mới</span>
                        </a>     
                        <div><span class="help-block hidden-xs hidden-sm">&nbsp;</span></div>

                        <!-- Modal -->
                        <div class="modal fade text-left" id="modal_add_user" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">
                                            <i class="fa fa-plus"></i> Thêm mới quản trị viên
                                        </h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="text-center" style="margin-bottom: 15px;">
                                            
                                            <div class="row">
                                                <div class="col-xs-4">
                                                    <label class="visible-on-hover-wrap circle-border-radius" style="cursor: pointer;">
                                                        <img src="/img/luffy-avt.jpg" alt="avatar" class="img-circle" style="width: 100px;">
                                                        <input type="file" style="display: none;" />
                                                        <span class="visible-on-hover circle-border-radius" style=" color: #fff; background-color: rgba(0, 0, 0, 0.59); width: 100%; height: 100%; top: 0; left: 0; padding-top: 33px;">
                                                            <i class="fa fa fa-3x fa-plus"></i>
                                                        </span>
                                                    </label>
                                                </div>
                                                <div class="col-xs-4">
                                                    <div class="form-group">
                                                        <label>Kích hoạt<span class="text-danger">*</span></label>
                                                        <div>
                                                            <label class="switch switch-success">
                                                                <input type="checkbox" checked=""><span></span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-xs-4">
                                                    <div class="form-group">
                                                        <label>Cấp quyền admin<span class="text-danger">*</span></label>
                                                        <div>
                                                            <label class="switch switch-success">
                                                                <input type="checkbox" checked=""><span></span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label>Họ và Tên<span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control form-control-lg" placeholder="Nhập họ & tên người dùng.."/>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label>Tên đăng nhập<span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control form-control-lg" placeholder="Nhập tên đăng nhập.."/>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label>Mật khẩu<span class="text-danger">*</span></label>
                                                    <input type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu.."/>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label>Nhập lại mật khẩu<span class="text-danger">*</span></label>
                                                    <input type="password" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu.."/>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Email<span class="text-danger">*</span></label>
                                                    <input type="email" class="form-control form-control-lg" placeholder="Nhập email.."/>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Số điện thoại<span class="text-danger">*</span></label>
                                                    <input type="tel" class="form-control form-control-lg" placeholder="Nhập số điện thoại.."/>
                                                </div>
                                            </div>
                                        </div>     
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Huỷ bỏ</button>
                                        <button type="button" class="btn btn-success btn-lg">
                                            <i class="fa fa-check"></i> Đồng ý
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Modal -->
                    </th>
                </tr>
            </table>
            <div class="table-responsive">
                <table class="table table-bordered table-condensed text-center middle-verticle">
                    <thead class="tbhead-color">
                        <tr>
                            <th class="text-center text-nowrap" style="width: 1%;">
                                Action
                            </th>
                            <th class="text-center text-nowrap" style="width: 1%;">
                                Active
                            </th>
                            <th class="text-center text-nowrap" style="width: 1%;">
                                <i class="gi gi-user"></i>
                            </th>
                            <th class="text-center text-nowrap">
                                Tên người dùng
                            </th>
                            <th class="text-center text-nowrap">
                                Username
                            </th>
                            <th class="text-center">
                                Email
                            </th>
                            <th class="text-center text-nowrap">
                                Điện thoại
                            </th>
                            <th class="text-center text-nowrap" style="width: 1%;">
                                Trạng thái
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 10; i++)
                        {
                            <tr>
                                <td class="text-nowrap">
                                    <a href="javascript:void(0);" class="btn btn-info">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="javascript:void(0);" class="btn btn-danger">
                                        <i class="gi gi-bin"></i>
                                    </a>
                                    <a href="javascript:void(0);" class="btn btn-warning">
                                        <i class="fa fa-key"></i>
                                    </a>
                                </td>
                                <td class="text-nowrap"><label class="switch switch-success"><input type="checkbox" checked=""><span></span></label></td>
                                <td style="width: 1%;"><img src="/img/luffy-avt.jpg" alt="avatar" class="img-circle" style="width: 50px;"></td>
                                <td class="text-nowrap"><h4><strong>Hoàng Hà Duy @i</strong></h4></td>
                                <td class="text-nowrap"><h4><strong>justeendh_@i</strong></h4></td>
                                <td class="text-center">hoanghaduy.qt@gmail.com</td>
                                <td class="text-center">0985 930 542</td>
                                <td class="text-center">
                                    <span class="label label-success label-lg"><i class="fa fa-check"></i> Online</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination pagination-lg">
                    <li><a href="javascript:void(0)"><i class="fa fa-arrow-left"></i></a></li>
                    <li><a href="javascript:void(0)">1</a></li>
                    <li class="active"><a href="javascript:void(0)">2</a></li>
                    <li><a href="javascript:void(0)">3</a></li>
                    <li><a href="javascript:void(0)"><i class="fa fa-arrow-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- END Timeline Widget -->